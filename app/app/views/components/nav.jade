section.nav
    form(name="MovieSelector", ng-submit="vm.submit()")
        select.genres(ng-model="vm.fields.genre", ng-change="vm.submit()")
            option(value="") Genres
            option(ng-repeat="genre in vm.genres", value="{{ ::genre.id }}") {{ ::genre.name }}

        select.year(ng-model="vm.fields.year", ng-change="vm.submit()")
            option(value="", selected="selected") Year
            option(value="2020") Recent
            option(value="2010") 2010
            option(value="2000") 2000
            option(value="1990") 1990
            option(value="1980") 1980
            option(value="1970") 1970
            option(value="1960") 1960
            option(value="1950") 1950
            option(value="1940") 1940
            option(value="1930") 1930
            option(value="1920") 1920

        select.vote(ng-model="vm.fields.vote", ng-change="vm.submit()")
            option(value="") Vote
            option(value="10") 10
            option(value="9") 9
            option(value="8") 8
            option(value="7") 7
            option(value="6") 6
            option(value="5") 5
            option(value="4") 4
            option(value="3") 3
            option(value="2") 2
            option(value="1") 1
